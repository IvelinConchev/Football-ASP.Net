@model List<PlayerListingViewModel>

@{
    ViewData["Title"] = "My Football Team";
}

@{
    var firstPlayer = Model.Any() ? Model[0] : null;
    var secondPlayer = Model.Count > 1 ? Model[1] : null;
    var thirdPlayer = Model.Count > 2 ? Model[2] : null;
}

@if (!Model.Any())
{
    <div class="jumbotron">
        <h1 class="display-4">Welcome to the best place for Football Statistic</h1>
        <p class="lead">There are no footbals in system currently available.</p>
        <hr class="my-4">
        <a asp-controller="Players" asp-action="Add" class="btn btn-primary btn-lg" role="button">Add Player</a>
    </div>
}

<div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
    <div class="carousel-inner">
        @if (firstPlayer != null)
        {
            <div class="carousel-item active">
                <img src="@firstPlayer.ImageUrl"  class="d-block w-100" alt="@firstPlayer.FirstName @firstPlayer.LastName @firstPlayer.Position @firstPlayer.Nationality @firstPlayer.Age">
                <div class="carousel-caption d-none d-md-block">
                    <h5><a class="btn btn-primary" asp-controller="Players" asp-action="Details" asp-route-id="@firstPlayer.Id">@firstPlayer.FirstName @firstPlayer.LastName @firstPlayer.Position @firstPlayer.Nationality (@firstPlayer.Age)</a></h5>
                </div>
            </div>
        }

        @if (secondPlayer != null)
        {
            <div class="carousel-item">
                <img src="~/img/@secondPlayer.ImageUrl" class="d-block w-100" alt="@secondPlayer.FirstName @secondPlayer.LastName @secondPlayer.Position @secondPlayer.Nationality (@secondPlayer.Age)">
                <div class="carousel-caption d-none d-md-block">
                    <h5><a class="btn btn-primary" asp-controller="Players" asp-action="Details" asp-route-id="@secondPlayer.Id">@secondPlayer.FirstName @secondPlayer.LastName @secondPlayer.Position @secondPlayer.Nationality (@secondPlayer.Age)</a></h5>
                </div>
            </div>
        }
        @if (thirdPlayer != null)
        {
            <div class="carousel-item">
                <img src="~/img/@thirdPlayer.ImageUrl" class="d-block w-100" alt="@thirdPlayer.FirstName @thirdPlayer.LastName @thirdPlayer.Position @thirdPlayer.Nationality @thirdPlayer.Age">
                <div class="carousel-caption d-none d-md-block">
                    <h5><a class="btn btn-primary" asp-controller="Players" asp-action="Details" asp-route-id="@thirdPlayer.Id">@thirdPlayer.FirstName @thirdPlayer.LastName @thirdPlayer.Position @thirdPlayer.Nationality (@thirdPlayer.Age)</a></h5>
                </div>
            </div>
        }
        <button class="carousel-control-prev" type="button" data-target="#carouselExampleControls" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-target="#carouselExampleControls" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </button>
    </div>
