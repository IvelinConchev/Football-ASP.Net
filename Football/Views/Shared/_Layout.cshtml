@using Football.Infrastructure.Data
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">
    <link rel="stylesheet" href="~/plugins/fontawesome-free/css/all.min.css">
    <link rel="stylesheet" href="~/css/adminlte.min.css">
    <link rel="stylesheet" href="~/plugins/toastr/toastr.css" />

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    @await RenderSectionAsync("Head", false)
</head>
<body class="hold-transition sidebar-mini">
    <div class="wrapper">

        <!-- Navbar -->
        <nav class="main-header navbar navbar-expand navbar-white navbar-light">
            <!-- Left navbar links -->
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
                </li>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    
                @if (User.IsInRole(DataConstants.Roles.RoleNameAdministrator) || (User.IsInRole(DataConstants.Roles.RoleNameManager)))
                {
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Positions" asp-action="Add">Add Position</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Players" asp-action="Add">Add Player</a>
                    </li>
                      <li class="nav-item">
                    <a class="nav-link text-dark" asp-area="" asp-controller="Players" asp-action="All">All Players</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-dark" asp-area="" asp-controller="Teams" asp-action="Add">Add Teams</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-dark" asp-area="" asp-controller="Teams" asp-action="All">All Teams</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-dark" asp-area="" asp-controller="Cities" asp-action="Add">Add City</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-dark" asp-area="" asp-controller="Cities" asp-action="All">All Cities</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-dark" asp-area="" asp-controller="Leagues" asp-action="Add">Add League</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-dark" asp-area="" asp-controller="Leagues" asp-action="All">All Leagues</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-dark" asp-area="" asp-controller="Stadiums" asp-action="Add">Add Stadium</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-dark" asp-area="" asp-controller="Stadiums" asp-action="All">All Stadiums</a>
                </li>
                }
                else
                {
                @*<li class="nav-item">
                    <a class="nav-link text-dark" asp-area="" asp-controller="Positions" asp-action="Add">Add Position</a>
                    </li>*@
                @* <li class="nav-item">
                    <a class="nav-link text-dark" asp-area="" asp-controller="Players" asp-action="Add">Add Player</a>
                    </li>*@
                <li class="nav-item">
                    <a class="nav-link text-dark" asp-area="" asp-controller="Players" asp-action="All">All Players</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-dark" asp-area="" asp-controller="Teams" asp-action="All">All Teams</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-dark" asp-area="" asp-controller="Cities" asp-action="All">All Cities</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-dark" asp-area="" asp-controller="Leagues" asp-action="All">All Leagues</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-dark" asp-area="" asp-controller="Stadiums" asp-action="All">All Stadiums</a>
                </li>
                }
            </ul>
            
            <!-- Right navbar links -->
            <ul class="navbar-nav ml-auto">
                <li class="nav-item">
                    <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })" method="post">
                        <i class="fas fa-door-open"></i>
                        <button type="submit" class="nav-link btn btn-link text-dark">Log Out</button>
                    </form>
                </li>
                <li class="nav-item">
                    <a class="nav-link" data-widget="fullscreen" href="#" role="button">
                        <i class="fas fa-expand-arrows-alt"></i>
                    </a>
                </li>
            </ul>
        </nav>
        <!-- /.navbar -->
        <!-- Main Sidebar Container -->
        <aside class="main-sidebar sidebar-dark-primary elevation-4">
            <!-- Brand Logo -->
            <a href="\" class="brand-link">
                <img src="~/img/Football-Logo.jpg" alt="Football Logo" class="brand-image img-circle elevation-3" style="opacity: .8">
                <span class="brand-text font-weight-light">My Football</span>
            </a>
            <!-- Sidebar -->
            <div class="sidebar">
                <partial name="_LoginPartial" />

                <!-- Sidebar Menu -->
                <partial name="_MainMenu" />
                <!-- /.sidebar-menu -->
            </div>
            <!-- /.sidebar -->
        </aside>

        <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper">
            <!-- Content Header (Page header) -->
            <div class="content-header">
                <div class="container-fluid">
                    <div class="row mb-2">
                        <div class="col-sm-6">
                            <h1 class="m-0">@ViewData["Title"]</h1>
                        </div><!-- /.col -->
                        <div class="col-sm-6">
                            <ol class="breadcrumb float-sm-left">
                               @* <li class="breadcrumb-item"><a href="#">Home</a></li>*@
                                @if (User.IsAdmin())
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="Admin" asp-controller="Players" asp-action="All">AdministrationPlayers</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="Admin" asp-controller="Teams" asp-action="All">AdministrationTeams</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="Admin" asp-controller="Cities" asp-action="All">AdministrationCities</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="Admin" asp-controller="Leagues" asp-action="All">AdministrationLeagues</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="Admin" asp-controller="Stadiums" asp-action="All">AdministrationStadiums</a>
                            </li>
                        }
                        @*<li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Teams" asp-action="All">All teams</a>*@
                                </ol>
                            <ol class="breadcrumb float-sm-right">
                                @*<li class="breadcrumb-item"><a href="#">Home</a></li>*@
                                @* <li class="breadcrumb-item active">Starter Page</li>*@
                                @if (User.IsInRole(DataConstants.Roles.RoleNameAdministrator))
                                {
                                     <a class="nav-link text-dark" asp-area="Admin" asp-controller="Teams" asp-action="All">Admin palnel</a>
                                    <a class="nav-link text-dark" asp-area="Admin" asp-controller="User" asp-action="Manageusers">Admin Roles</a>
                                }
                                else if (User.IsInRole(DataConstants.Roles.RoleNameManager))
                                 {
                                    <a class="nav-link text-dark" asp-area="Manager" asp-controller="Home" asp-action="Index">Manager palnel</a>
                                }
                                else
                                {
                                    <li class="nav-item">
                    <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">User</a>
                </li>
                                }
                            </ol>
                        </div><!-- /.col -->
                    </div><!-- /.row -->
                </div><!-- /.container-fluid -->
            </div>
            <!-- /.content-header -->
            <!-- Main content -->
            <div class="content">
                @if (TempData.ContainsKey(WebConstants.GlobalMessageKey))
                {
                    <div class="alert alert-success text-center" role="alert">
                       @TempData[WebConstants.GlobalMessageKey]
                    </div>
                }
                @if (TempData.ContainsKey(WebConstants.DangerMessageKey))
                {
                    <div class="alert alert-danger text-center" role="alert">
                        @TempData[WebConstants.DangerMessageKey]
                        </div>
                }
                <div class="container-fluid">
                    @RenderBody()
                </div><!-- /.container-fluid -->
            </div>
            <!-- /.content -->
        </div>
        <!-- /.content-wrapper -->
        <!-- Main Footer -->
        <footer class="main-footer">
            <!-- To the right -->
            <div class="float-right d-none d-sm-inline">
                Anything you want
            </div>
            <!-- Default to the left -->
            <strong>Copyright &copy; 2014-2021 <a href="/">My Football</a>.</strong> All rights reserved.
        </footer>
    </div>
    <!-- ./wrapper -->
    <!-- REQUIRED SCRIPTS -->
    <!-- jQuery -->
    <script src="~/plugins/jquery/jquery.min.js"></script>
    <!-- Bootstrap 4 -->
    <script src="~/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <!-- AdminLTE App -->
    <script src="~/js/adminlte.min.js"></script>
    <script src="~/plugins/toastr/toastr.min.js"></script>
    <partial name="_UserMessages" />
    @await RenderSectionAsync("Scripts", false)
</body>
</html>
