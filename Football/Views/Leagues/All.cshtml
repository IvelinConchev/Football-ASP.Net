@model AllLeaguesQueryModel

@{
    ViewData["Title"] = "All Leagues";
}

<form method="get">
    <div class="row">
        <div class="form-group col-md-4">
            <div class="form-group">
                <label asp-for="Name"></label>
                <select asp-for="Name" class="form-control">
                    <option value="">All</option>

                    @foreach (var name in Model.Names)
                    {
                        <option value="@name">@name</option>
                    }
                </select>
            </div>
        </div>

        <div class="form-group col-md-4">
            <label asp-for="SearchTerm"></label>
            <input asp-for="SearchTerm" class="form-control" placeholder="Ivan Petkov Mihov...">
        </div>

        <div class="form-group col-md-4">
            <div class="form-group">
                <label asp-for="Sorting"></label>
                <select asp-for="Sorting" class="form-control">
                    <option value="0" selected>Name</option>
                </select>
            </div>
        </div>
    </div>
</form>

@{
    var previousPage = Model.CurrentPage - 1;
    if (previousPage < 1)
    {
        previousPage = 1;
    }

    var maxPage = Math.Ceiling((double)Model.TotalLeagues / AllLeaguesQueryModel.LeaguesPerPage);
}

<div class="row mb-5">
    <div class="col-md-6">
        <a class="btn btn-primary @(Model.CurrentPage == 1 ? "disabled" : string.Empty)"
           asp-controller="Leagues"
           asp-action="All"
           asp-route-currentPage="@previousPage"
           asp-route-team="@Model.Name"
           asp-route-searchTerm="@Model.SearchTerm"
           asp-route-sorting="@((int)Model.Sorting)"><<</a>
    </div>
    <div class="col-md-6">
        <a class="btn btn-primary float-right @(Model.CurrentPage == maxPage ? "disabled" : string.Empty)"
           asp-controller="Leagues"
           asp-action="All"
           asp-route-currentPage="@(Model.CurrentPage + 1)"
           asp-route-team="@Model.Name"
           asp-route-searchTerm="@Model.SearchTerm"
           asp-route-sorting="@((int)Model.Sorting)">>></a>
    </div>
    <br />
    <br />

    @if (!Model.Leagues.Any())
    {
      <h2 class="text-center">No leagues found by the given criteria!</h2>
}

<partial name="_LeaguesPartial" model="@Model.Leagues" />


