@model AllPlayersQueryModel

@{
    ViewData["Title"] = "Всички футболисти";
}

<form method="get">
    <div class="row">
        <div class="form-group col-md-4">
            <div class="form-group">
                <label asp-for="Team"></label>
                <select asp-for="Team" class="form-control">
                    <option value="">Всички</option>

                    @foreach (var team in Model.Teams)
                    {
                        <option value="@team">@team</option>
                    }
                </select>
            </div>
        </div>

        <div class="form-group col-md-4">
            <label asp-for="SearchTerm"></label>
            <input asp-for="SearchTerm" class="form-control" placeholder="Иван Петков Колев...">
        </div>

        <div class="form-group col-md-4">
            <div class="form-group">
                <label asp-for="Sorting"></label>
                <select asp-for="Sorting" class="form-control">
                    <option value="0" selected>Име Презиме Фамилия</option>
                    <option value="1" selected>Отбор</option>
                    <option value="2" selected>Позиция</option>
                    <option value="3" selected>Описание</option>
                </select>
            </div>
        </div>
    </div>
</form>

@{
    var previousPage = Model.CurrentPage - 1;
    if (previousPage < 1)
    {
        previousPage = 1;
    }

    var maxPage = Math.Ceiling((double)Model.TotalPlayers / AllPlayersQueryModel.PlayersPerPage);
}

<div class="row mb-5">
    <div class="col-md-6">
        <a class="btn btn-primary @(Model.CurrentPage == 1 ? "disabled" : string.Empty)"
           asp-controller="Players"
           asp-action="All"
           asp-route-currentPage="@previousPage"
           asp-route-team="@Model.Team"
           asp-route-searchTerm="@Model.SearchTerm"
           asp-route-sorting="@((int)Model.Sorting)"><<</a>
    </div>
    <div class="col-md-6">
        <a class="btn btn-primary float-right @(Model.CurrentPage == maxPage ? "disabled" : string.Empty)"
           asp-controller="Players"
           asp-action="All"
           asp-route-currentPage="@(Model.CurrentPage + 1)"
           asp-route-team="@Model.Team"
           asp-route-searchTerm="@Model.SearchTerm"
           asp-route-sorting="@((int)Model.Sorting)">>></a>
    </div>
    <br />
    <br />

    @if (!Model.Players.Any())
    {
      <h2 class="text-center">Няма намерени играчи по зададените критерии!</h2>
}

<partial name="_PlayersPartial" model="@Model.Players" />


