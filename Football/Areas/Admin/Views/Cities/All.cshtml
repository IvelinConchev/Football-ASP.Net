@model IEnumerable<CityServiceModel>

@{
    ViewBag.Title = "All Cities Administration";
}

@{
    ViewData["Title"] = "Home Page of area Admin";
    <h1>Welcome to Admin area</h1>
}

<h1>All Cities</h1>

<table class="table table-striped">
    <thead class="thead-dark">
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Name</th>
            <th scope="col">PostCode</th>
            <th scope="col">Approved</th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var city in Model)
        {
            <tr>
                <td scope="col">@city.Id</td>
                <td scope="col">@city.Name</td>
                <td scope="col">@city.PostCode</td>
                <td scope="col">@(city.IsPublic ? "Yes" : "No")</td> 
                <td scope="col">
                    <a asp-area="" asp-controller="Cities" asp-action="Delete" asp-route-id="@city.Id" class="btn btn-danger float-right ml-3">Delete</a>
                    <a asp-area="" asp-controller="Cities" asp-action="Edit" asp-route-id="@city.Id" class="btn btn-warning float-right ml-3">Edit</a>
                    <a asp-area="Admin" asp-controller="Cities" asp-action="ChangeVisibility" asp-route-id="@city.Id" class="btn btn-info float-right ml-3">@(city.IsPublic ? "Hide" : "Show")</a>
                    <a asp-area="" asp-controller="Cities" asp-action="Details" asp-route-id=@city.Id asp-route-information="@city.GetInformation()" class="btn btn-primary float-right ml-3">Виж</a>
                </td>
            </tr>
        }
    </tbody>
</table>