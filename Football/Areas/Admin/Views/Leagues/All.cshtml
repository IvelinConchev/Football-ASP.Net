@model IEnumerable<LeagueServiceModel>

@{
    ViewBag.Title = "All Leagues Administration";
}

@{
    ViewData["Title"] = "Home Page of area Admin";
    <h1>Welcome to Admin area</h1>
}

<h1>All Leagues</h1>

<table class="table table-striped">
    <thead class="thead-dark">
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Name</th>
            <th scope="col">Approved</th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var league in Model)
        {
            <tr>
                <td scope="col">@league.Id</td>
                <td scope="col">@league.Name</td>
                <td scope="col">@(league.IsPublic ? "Yes" : "No")</td> 
                <td scope="col">
                    <a asp-area="" asp-controller="Leagues" asp-action="Delete" asp-route-id="@league.Id" class="btn btn-danger float-right ml-3">Delete</a>
                    <a asp-area="" asp-controller="Leagues" asp-action="Edit" asp-route-id="@league.Id" class="btn btn-warning float-right ml-3">Edit</a>
                    <a asp-area="Admin" asp-controller="Leagues" asp-action="ChangeVisibility" asp-route-id="@league.Id" class="btn btn-info float-right ml-3">@(league.IsPublic ? "Hide" : "Show")</a>
                    <a asp-area="" asp-controller="Leagues" asp-action="Details" asp-route-id=@league.Id asp-route-information="@league.GetInformation()" class="btn btn-primary float-right ml-3">Виж</a>
                </td>
            </tr>
        }
    </tbody>
</table>