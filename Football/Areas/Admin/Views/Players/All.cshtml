@model IEnumerable<PlayerServiceModel>

@{
    ViewBag.Title = "All Teams Administration";
}

@{
    ViewData["Title"] = "Добре дошли в Админ area";
}

<h1>Футболисти</h1>

<table class="table table-striped">
    <thead class="thead-dark">
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Име</th>
            <th scope="col">Фамилия</th>
            <th scope="col">Години</th>
            <th scope="col">Отбор</th>
            <th scope="col">Одобрен</th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var player in Model)
        {
            <tr>
                <td scope="col">@player.Id</td>
                <td scope="col">@player.FirstName</td>
                <td scope="col">@player.LastName</td>
                <td scope="col">@player.Age</td>
                <td scope="col">@player.Team</td>
                <td scope="col">@(player.IsPublic ? "Да" : "Не")</td> 
                <td scope="col">
                    <a asp-area="" asp-controller="Players" asp-action="Delete" asp-route-id="@player.Id" class="btn btn-danger float-right ml-3">Delete</a>
                    <a asp-area="" asp-controller="Players" asp-action="Edit" asp-route-id="@player.Id" class="btn btn-warning float-right ml-3">Edit</a>
                    <a asp-area="Admin" asp-controller="Players" asp-action="ChangeVisibility" asp-route-id="@player.Id" class="btn btn-info float-right ml-3">@(player.IsPublic ? "Hide" : "Show")</a>
                    <a asp-area="" asp-controller="Players" asp-action="Details" asp-route-id=@player.Id asp-route-information="@player.GetInformation()" class="btn btn-primary float-right ml-3">View</a>
                </td>
            </tr>
        }
    </tbody>
</table>