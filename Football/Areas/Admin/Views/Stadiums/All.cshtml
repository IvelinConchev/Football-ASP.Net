@model IEnumerable<StadiumServiceModel>

@{
    ViewBag.Title = "All Stadiums Administration";
}

@{
    ViewData["Title"] = "Добре дошли в Админ area";
}

<h1>Стадиони</h1>

<table class="table table-striped">
    <thead class="thead-dark">
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Име</th>
            <th scope="col">Одобрен</th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var team in Model)
        {
            <tr>
                <td scope="col">@team.Id</td>
                <td scope="col">@team.Name</td>
                <td scope="col">@(team.IsPublic ? "Да" : "Не")</td> 
                <td scope="col">
                    <a asp-area="" asp-controller="Stadiums" asp-action="Delete" asp-route-id="@team.Id" class="btn btn-danger float-right ml-3">Delete</a>
                    <a asp-area="" asp-controller="Stadiums" asp-action="Edit" asp-route-id="@team.Id" class="btn btn-warning float-right ml-3">Edit</a>
                    <a asp-area="Admin" asp-controller="Stadiums" asp-action="ChangeVisibility" asp-route-id="@team.Id" class="btn btn-info float-right ml-3">@(team.IsPublic ? "Скрий" : "Покажи")</a>
                    <a asp-area="" asp-controller="Stadiums" asp-action="Details" asp-route-id=@team.Id asp-route-information="@team.GetInformation()" class="btn btn-primary float-right ml-3">Виж</a>
                </td>
            </tr>
        }
    </tbody>
</table>